              iframe.embed-responsive-item(width='560', height='315', src='https://www.youtube.com/embed/02Cw3_qsuvs?list=PLkc5n6npRWkiJswTO_jTxGbsY8-67qgiD', frameborder='0', allow='accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture', allowfullscreen='')

